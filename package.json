{
  "name": "offroad-tire-calculator",
  "version": "1.0.0",
  "description": "Production-ready off-road tire calculator for overlanding and 4x4 builds",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run seo:generate && npm run authority:generate && vite build",
    "build:app": "vite build",
    "preview": "vite preview",
    "test": "node --test tests/*.test.js tests/unit/*.test.js",
    "test:validation": "node --test tests/validation/*.test.js",
    "test:all": "node --test tests/**/*.test.js",
    "seo:generate": "node scripts/generate-seo-pages.js",
    "authority:generate": "node scripts/generate-authority-pages.cjs"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.3.1"
  }
}
